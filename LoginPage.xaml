<Page
    x:Class="OneLastSong.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#f0f0f0">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <TextBox x:Name="UsernameLogin" PlaceholderText="Username" Margin="0,0,0,10" Padding="10" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5"/>
                <PasswordBox x:Name="PasswordLogin" PlaceholderText="Password" Margin="0,0,0,10" Padding="10" BorderBrush="#ccc" BorderThickness="1" CornerRadius="5"/>
                <CheckBox x:Name="RememberMeLogin" Content="Remember Me" Margin="0,0,0,10"/>
                <Button Content="Login" Click="Login_Click" Margin="0,0,0,10" Background="#0078D7" Foreground="White" Padding="10" BorderBrush="#0078D7" BorderThickness="1" CornerRadius="5"/>
                <Button Content="Register" Click="NavigateToRegisterPage_Click" Background="Transparent" Foreground="#0078D7" Padding="10" BorderBrush="Transparent" BorderThickness="1" CornerRadius="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

