<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Small Text Size -->
    <x:Double x:Key="SmallTextSize">12</x:Double>

    <!-- Medium Text Size -->
    <x:Double x:Key="MediumTextSize">16</x:Double>

    <!-- Large Text Size -->
    <x:Double x:Key="LargeTextSize">20</x:Double>

    <!-- Extra Large Text Size -->
    <x:Double x:Key="ExtraLargeTextSize">24</x:Double>

    <!-- Header Text Size -->
    <x:Double x:Key="HeaderTextSize">32</x:Double>

    <!-- Subheader Text Size -->
    <x:Double x:Key="SubheaderTextSize">28</x:Double>

</ResourceDictionary>
