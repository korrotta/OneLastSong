<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneLastSong">

    <Style TargetType="local2:MainWindowViewModel" xmlns:local2="using:OneLastSong.ModelViews">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:MainWindowViewModel">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local2:IAdudioDb" xmlns:local2="using:OneLastSong.Db">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local2:IAdudioDb">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
