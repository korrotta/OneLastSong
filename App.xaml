<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="OneLastSong.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OneLastSong">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Other app resources here -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Other merged dictionaries here -->
                <ResourceDictionary Source="Styles/Texts.xaml"/>
                <ResourceDictionary Source="Styles/Margins.xaml"/>
                <ResourceDictionary Source="Styles/Paddings.xaml"/>
                <ResourceDictionary Source="Styles/Sizes.xaml"/>
                <ResourceDictionary Source="Styles/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark" Source="Themes/DarkMode.xaml"/>
                <ResourceDictionary x:Key="Light" Source="Themes/LightMode.xaml"/>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
